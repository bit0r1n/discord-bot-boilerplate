{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@plugins/*": [ "src/plugins/*" ],
      "@commands/*": [ "src/structures/commands/*" ],
      "@components/*": [ "src/structures/components/*" ],
      "@structures/*": [ "src/structures/*" ],
      "@src/*": [ "src/*" ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}
